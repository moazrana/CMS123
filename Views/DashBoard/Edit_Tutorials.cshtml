@model CMS.Models.edit_Tutorials
@{
    ViewBag.Title = "Edit_Tutorials";
}

<h2>Edit_Tutorials</h2>


@using (Html.BeginForm("Edit_Tutorials", "DashBoard", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Workshop</legend>

        @Html.HiddenFor(model => model.tutorials_id)

        <div class="editor-label">
            @Html.LabelFor(model => model.title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.discription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.discription)
            @Html.ValidationMessageFor(model => model.discription)
        </div>


        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
