@model CMS.Models.UserListMdel

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.controller = "dashboard";
    ViewBag.action = "my_events";  
}



@{Html.RenderPartial("~/Views/Shared/partialDashBoard-conference.cshtml");}


<div class="col-sm-10 blog-content">



<div class="col-sm-10 text-left">


    <h1 class="text-center">Add Organizers</h1>

    @using (Html.BeginForm("add_organizers", "DashBoard", FormMethod.Post, new { @class = "form-horizontal form-margin " }))
    {

        <div class="form-group">
            <label class="control-label col-md-4"> Email </label>
            <div class="col-md-4">
                <input type="text" name="email" class="form-control" />

            </div>
        </div>


        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Invite">
        </div>
    }

    <h2>List of User Present in our List</h2>

    <table class="table table-hover table-striped table-bordered table-responsive" align="center">
        <tr>
            <th>User</th>
            <th>Email</th>
            <th>Research Area</th>
        </tr>
        @foreach (var con in Model.users)
        {
            <tr>
                <td>@Html.ActionLink(con.name, "add_organizer", new { u_id = con.id, con_id = @Model.conference_id })</td>
                <td>@Html.ActionLink(con.email, "add_organizer", new { u_id = con.id, con_id = @Model.conference_id })</td>
                <td>@*@Html.ActionLink(con.research_area, "UserProfile", new { user_id = con.id })*@</td>
            </tr>
        }
    </table>


</div>
    </div>

    </div>
</div>
    </div>


  