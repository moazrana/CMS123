</head>

<body>


    <header class="header">
        <h1 style="padding-left:50px; text-align: center">Conference Mangement System</h1>
        <img id="cms-logo" src="~/Pics/cms logo.png">
    </header>


    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-default">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Home", "Home")</li>
                    <li>@Html.ActionLink("SearchforConferences", "Searching")</li>
                    <li>@Html.ActionLink("Create-an-event", "organize")</li>
                    <li>@Html.ActionLink("My-Events", "Events")</li>
                    <li>@Html.ActionLink("Contact-Us", "Contact")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Signin", "sign")</li>
                    <li>@Html.ActionLink("Signup", "signup")</li>
                    @*<li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>*@
                </ul>


            </div>
        </div>
    </nav>


    <center style="margin-top:-22px;"><h1 style="background-color: #9d9d9d; padding:10px;">Extra Events</h1></center>


    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-2 sidenav">

                <h4><b>Manage Basics</b></h4>
                <li>@Html.ActionLink("Change name of conference", "Edit_Name", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Change Venue", "Edit_Venue", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Change date", "Edit_Date", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Update Agenda", "Edit_Agenda", new { id = @Model.j })</li>
                <br>
                <hr>

                <h4 style="padding-top: -20px"><b>Manage Guests</b></h4>

                <li>@Html.ActionLink("Invite People", "AutoGen", new { id = @Model.j })</li>
                <li>@Html.ActionLink("List of Participants", "ListofParticipant", new { id = @Model.j })</li>
                <li>@Html.ActionLink("List of Invited Speakers", "InvitedSpeaker", new { id = @Model.j })</li>
                <br>
                <hr>
                <h4><b>Manage Sessions</b></h4>
                <li>@Html.ActionLink("Add/Remove Sessions", "Sessions", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Workshop", "Workshop", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Tutorials", "Tutorials", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Extra Events", "Extra_Events", new { id = @Model.j })</li>
                <li>@Html.ActionLink("PHD Symposium", "PHD_Symposium", new { id = @Model.j })</li>
                <br>
                <hr>

                <h4><b>Manage Papers</b></h4>
                <li>@Html.ActionLink("Change Submission link", "SubmissionLink", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Update List of Accepted Papers", "AcceptedPapers", new { id = @Model.j })</li>

            </div>
                    <div class="col-sm-10 text-left">
                        <table>
                           
                           
                                @foreach (var ws in Model.participants)
                                {
                                    <tr>
                                        <th>Title:-</th>
                                        <td>@ws.title</td>
                                    </tr>
                                    <tr>
                                        <th>Discription</th>
                                        <td>@ws.discription</td>
                                    </tr>


                                    <tr>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit_ExtraEvent", new { id = ws.id, con_id = ws.conference }) |
                                            @Html.ActionLink("Delete", "Delete_ExtraEvent", new { id = ws.id })
                                        </td>
                                    </tr>

                                    <tr class="blank_row">
                                        <td colspan="3"></td>
                                    </tr>
                                }
                            
                        </table>

                        
                            <label colspan="2" style="text-align:center;">
