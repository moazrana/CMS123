<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Conference Management System</title>
    <link href="~/Bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/bootstrap.min.js" type="application/javascript" rel="script"></script>
    <link href="~/CSS/Main.css" rel="stylesheet" type="text/css">
    <link href="nav%20bar.css" rel="stylesheet" type="text/css">

</head>

<body>


    <header class="header">
        <h1 style="text-align: center">Conference Management System</h1>
        <img id="cms-logo" src="~/Pics/cms logo.png">
    </header>


    <nav class="nav navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-default">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Home", "Index")</li>
                    <li>@Html.ActionLink("Search-Event", "Search")</li>
                    <li>@Html.ActionLink("Create-Event", "organize")</li>
                    <li>@Html.ActionLink("My-Events", "myEvents")</li>
                    <li>@Html.ActionLink("Search-User", "Search_User")</li>
                    @*  <li>@Html.ActionLink("Contact-Us", "Contact")</li>*@

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (Session["id"].Equals(0))
                        {

                            @Html.ActionLink("Signin", "signIn")}
                        else
                        {
                            @Html.ActionLink(Session["email"].ToString(), "MyProfile")

                        }
                    </li>
                    <li>
                        @if (Session["id"].Equals(0))
                        {
                            @Html.ActionLink("Signup", "signup")
                        }
                        else
                        {
                            @Html.ActionLink("Signout", "signout")
                        }
                    </li>
                    @*<li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>*@
            </ul>


            </div>
        </div>
    </nav>


    <center style="margin-top:-22px;"><h1 style="background-color: #9d9d9d; padding:10px;">Accepted Papers</h1></center>


    <div class="container-fluid text-center">
        <div class="row">
            <div id="lists">
            <div class="col-lg-2 side">
                <h4><b>Manage Basics</b></h4>
                <li>@Html.ActionLink("Change Name", "Edit_Info", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Change Venue", "Edit_Info", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Change Date", "Edit_Info", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Update Agenda", "Edit_Info", new { id = @Model.j })</li>
                <br>
                <hr>

                <h4 style="padding-top: -20px"><b>Manage Guests</b></h4>

                <li>@Html.ActionLink("Invite People", "AutoGen", new { id = @Model.j })</li>
                <li>@Html.ActionLink("List of Participants", "ListofParticipant", new { id = @Model.j })</li>
                <li>@Html.ActionLink("List of  Speakers", "InvitedSpeaker", new { id = @Model.j })</li>
                <br>
                <hr>
                <h4><b>Manage Sessions</b></h4>
                <li>@Html.ActionLink("Sessions", "Sessions", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Workshop", "Workshop", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Tutorials", "Tutorials", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Extra Events", "Extra_Events", new { id = @Model.j })</li>
                <li>@Html.ActionLink("PHD Symposium", "PHD_Symposium", new { id = @Model.j })</li>
                <br>
                <hr>

                <h4><b>Manage Papers</b></h4>
                <li>@Html.ActionLink("Submission Link", "Edit_Info", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Accepted Papers", "AcceptedPapers", new { id = @Model.j })</li>
                </div>
            </div>

            <div class="col-sm-10 text-left">


                <table>
                    @if (Model.list.Count == 0)
                    {

                    }
                    else
                    {
                        foreach (var ws in Model.list)
                        {
                            <tr>
                                <th>Title:-</th>
                                <td>@ws.title</td>
                            </tr>
                            <tr>
                                <th>Discription</th>
                                <td>@ws.discription</td>
                            </tr>
                            <tr class="blank_row">
                                <td colspan="3"></td>
                            </tr>

                        }
                    }

                </table>
                <label colspan="2" style="text-align:center;">
                    @Html.ActionLink("Add More Accepted Papers", "AddAcceptedPaper", new { id = @Model.j })
                </label>


            </div>


        </div>

    </div>



</body>
</html>