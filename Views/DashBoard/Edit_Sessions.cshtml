@model CMS.Models.edit_Sessions

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.controller = "dashboard";
    ViewBag.action = "my_events";  
}


@{Html.RenderPartial("~/Views/Shared/partialDashBoard-j.cshtml");}

<div class="col-sm-10 blog-content">


    <div class="col-sm-10 text-left">


        <h1 class="text-center">Edit Session</h1>

        @using (Html.BeginForm("Edit_Sessions", "DashBoard", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)



    <div class="form-group">
        <label class="control-label col-md-4">Title</label>
        <div class="col-md-4">
            <input type="text" name="title" id="names" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-4">Venue</label>
        <div class="col-md-4">
            <input type="text" name="venue" id="venue" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-4">Day</label>
        <div class="col-md-4">
            <input type="text" name="start_day" id="day" class="form-control" />
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-4">Start Time</label>
        <div class="col-md-4">
            <input type="text" name="start_time" id="stime" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-4">End Time</label>
        <div class="col-md-4">
            <input type="text" name="end_time" id="etime" class="form-control" />
        </div>
    </div>

    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="Updated">
    </div>



        }




    </div>
</div>
                    </div>
                    </div>
                    </div>

<script>

    function info()
    {
        var name = '@(Model.title)';
        var sdate = '@(Model.venue)';
        var edate = '@(Model.start_day)';
        var country = '@(Model.start_time)';
        var city = '@(Model.end_time)';


        document.getElementById("names").value = name;
        document.getElementById("venue").value = sdate;
        document.getElementById("day").value = edate;
        document.getElementById("stime").value = country;
        document.getElementById("etime").value = city;
    }

</script>