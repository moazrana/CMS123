                    <hr>

                    <h4><b>Manage Papers</b></h4>
                    <li>@Html.ActionLink("Submission link", "Edit_Info", new { id = @Model.conf_id })</li>
                    <li>@Html.ActionLink("Accepted Papers", "AcceptedPapers", new { id = @Model.conf_id })</li>
                    </div>
                </div>


