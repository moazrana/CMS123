    <center style="margin-top:-22px;"><h1 style="background-color: #9d9d9d; padding:10px;">Conference Information</h1></center>


    <div class="container-fluid text-center">
        <div class="row">
            <div id="lists">
                <div class="col-lg-2 side">

                    <h4><b>Manage Basics</b></h4>
                    <li>@Html.ActionLink("Change Name", "Edit_Info", new { id = @Model.conf_id })</li>
                    <li>@Html.ActionLink("Change Venue", "Edit_Info", new { id = @Model.conf_id })</li>
                    <li>@Html.ActionLink("Change Date", "Edit_Info", new { id = @Model.conf_id })</li>
                    <li>@Html.ActionLink("Update Agenda", "Edit_Info", new { id = @Model.conf_id })</li>
                    <br>
                    <hr>

                    <h4 style="padding-top: -20px"><b>Manage Guests</b></h4>

                    <li>@Html.ActionLink("Add Organizers", "add_organizers", new { id = @Model.conf_id })</li>
                    <li>@Html.ActionLink("Invite People", "UserList", new { id = @Model.conf_id })</li>
                    <li>@Html.ActionLink("List of Participants", "ListofParticipant", new { id = @Model.conf_id })</li>
                    <li>@Html.ActionLink("List of Speakers", "InvitedSpeaker", new { id = @Model.conf_id })</li>
