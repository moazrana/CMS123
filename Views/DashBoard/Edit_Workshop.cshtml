<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Conference Management System</title>
    <link href="~/Bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://aconf_idax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/bootstrap.min.js" type="application/javascript" rel="script"></script>
    <link href="~/CSS/Main.css" rel="stylesheet" type="text/css">
    <link href="nav%20bar.css" rel="stylesheet" type="text/css">

</head>
<style>
    label{
        font-family:'Times New Roman';
    }
    #butt{
        height:40px;
        width:100px;
        font-size:large;
        font-family:'Times New Roman';
        font-weight:bold;
    }
    #butt:hover{
        background-color:lightgray;
        }
</style>
<body>


    <header class="header">
        <h1 style="text-align: center">Conference Management System</h1>
        <img id="cms-logo" src="~/Pics/cms logo.png">
    </header>


    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-default">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Home", "Index")</li>
                    <li>@Html.ActionLink("Search-Event", "Search")</li>
                    <li>@Html.ActionLink("Create-Event", "organize")</li>
                    <li>@Html.ActionLink("My-Events", "myEvents")</li>
                    <li>@Html.ActionLink("Search-User", "Search_User")</li>

                    @*  <li>@Html.ActionLink("Contact-Us", "Contact")</li>*@

                </ul>                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (Session["id"].Equals(0) || Session["id"].Equals(0)==null)
                        {

                            @Html.ActionLink("Signin", "sign")}
                        else
                        {
                            @Html.ActionLink(Session["email"].ToString(), "sign")

                        }
                    </li>
                    <li>
                        @if (Session["id"].Equals(0))
                        {
                            @Html.ActionLink("Signup", "signup")
                        }
                        else
                        {
                            @Html.ActionLink("Signout", "signup")
                        }
                    </li>

                    @*<li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>*@
                </ul>


            </div>
        </div>
    </nav>


    <center style="margin-top:-22px;"><h1 style="background-color: #9d9d9d; padding:10px;">Edit Workshop</h1></center>


    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-lg-2 side">
                <div id="lists">
                <h4><b>Manage Basics</b></h4>
                <li>@Html.ActionLink("Change Name ", "Edit_Info", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Change Venue", "Edit_Info", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Change Date", "Edit_Info", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Update Agenda", "Edit_Info", new { id = @Model.j })</li>
                <br>
                <hr>

                <h4 style="padding-top: -20px"><b>Manage Guests</b></h4>

                <li>@Html.ActionLink("Add Organizers", "add_organizers", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Invite People", "UserList", new { id = @Model.j })</li>
                <li>@Html.ActionLink("List of Participants", "ListofParticipant", new { id = @Model.j })</li>
                <li>@Html.ActionLink("List of Speakers", "InvitedSpeaker", new { id = @Model.j })</li>
                <br>
                <hr>
                <h4><b>Manage Sessions</b></h4>
                <li>@Html.ActionLink("Sessions", "Sessions", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Workshop", "Workshop", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Tutorials", "Tutorials", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Extra Events", "Extra_Events", new { id = @Model.j })</li>
                <li>@Html.ActionLink("PHD Symposium", "PHD_Symposium", new { id = @Model.j })</li>
                <br>
                <hr>

                <h4><b>Manage Papers</b></h4>
                <li>@Html.ActionLink("Submission link", "Edit_Info", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Accepted Papers", "AcceptedPapers", new { id = @Model.j })</li>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 text-left">



                    @using (Html.BeginForm("Edit_Workshop", "DashBoard", null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)




                        <!---------------------------------------------->

                        <div class="form-group">
                            <label class="control-label col-md-3" style="font-size:x-large;text-align:left;">Title: </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.title,
                 new { style = "width: 400px;margin-top:12px;height:40px;" })
                                @Html.ValidationMessageFor(model => model.title)

                            </div>
                        </div>





                        <div class="form-group">
                            <label class="control-label col-md-3" style="font-size:x-large"> Discription: </label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.discription,
                 new { style = "width: 400px;margin-top:12px;height: 200px" })
                                @Html.ValidationMessageFor(model => model.discription)
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="control-label col-md-9" style="text-align:left; font-weight:bold;font-size:large;"> Add new speakers  (Write emails and use coma seperater): </label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.new_speakers,
                 new { style = "width: 400px;margin-top:12px" })
                                @Html.ValidationMessageFor(model => model.new_speakers)
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="control-label col-md-9" style="text-align: left; font-weight: bold; font-size: large;"> Add new organizers (Write emails and use coma seperater): </label>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.new_organizers,
                 new { style = "width: 400px;margin-top:12px" })
                                @Html.ValidationMessageFor(model => model.new_organizers)
                            </div>
                        </div>


                        <div  style="margin-left:35%;margin-bottom:20%;">
                            <input class="btn btn-default" type="submit" value="Save" id="butt" />
                        </div>


                    }


                </div>
                <div class="col-sm-2 ">
                    <h2 style="margin-left:-50%">Speakers</h2>
                    <table>
                        @foreach (var speaker in @Model.speakers) { 
                            <tr>
                                <td>@Html.ActionLink(speaker.name, "UserProfile", new {id=speaker.id})</td>
                                <td> </td>
                                <td><p style="margin-top:8px;margin-left:8px">@Html.ActionLink("x", "DeleteWorkshopSuser",new {suser=speaker.id})</p></td>
                            </tr>
                            
                        }
                    </table>
                </div>

                <div class="col-sm-2 ">
                    <h2 style="margin-left:-50%">Organizers</h2>
                    <table>
                        @foreach (var organizer in @Model.organizers)
                        {
                            <tr>
                                <td>@Html.ActionLink(organizer.name, "UserProfile", new { id = organizer.id })</td>
                                <td><p style="margin-top:8px;margin-left:8px">@Html.ActionLink("x", "DeleteWorkshopSuser", new {suser=organizer.id })</p></td>
                            </tr>

                        }
                    </table>

                </div>
            </div>
    </div>



</body>
</html>