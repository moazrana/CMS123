@model CMS.Models.DashBoard
@{
    ViewBag.Title = "DashBoard";
}


<html>
<head>
    <link rel="stylesheet" href="~/CSS/Main.css">
    <title>Conference Mangement System</title>
</head>
<body>
    <header>
        <center><h1 style="padding-left:50px;">Conference Mangement System</h1></center>
        <img id="cms-logo" src="~/Pics/cms logo.png">
    </header>
    <nav id="nav-properties">
        <ul>
            <li>@Html.ActionLink("Home", "Home")</li>
            <li>@Html.ActionLink("SearchforConferences", "Searching")</li>
            <li>@Html.ActionLink("Upcoming-Conferences", "Upcoming_Conference")</li>
            <li>@Html.ActionLink("My-Events", "Events")</li>
            <li>@Html.ActionLink("Contact-Us", "Contact")</li>
            <li>@Html.ActionLink("About", "About")</li>
            <li id="inout">@Html.ActionLink("Signin", "signIn")</li>
            <li id="inout">@Html.ActionLink("Signup", "signup")</li>
        </ul>
    </nav>
    
    <div class="margin"></div>
    <section>
        <center style="margin-top:-22px;"><h1 style="background-color:rgb(215,215,215);padding:10px;">My Events</h1></center>
        <aside>
            <div>
                <h4>Manage basics</h4>
                <li>@Html.ActionLink("Change name of conference", "organize")</li>
                <li>@Html.ActionLink("Change Venue", "organize")</li>
                <li>@Html.ActionLink("Change date", "organize")</li>
                <li>@Html.ActionLink("Update Agenda", "organize")</li>
            </div>
        </aside><br>
        <aside>
            <div>
                <h4>Manage Guests</h4>
                <li>@Html.ActionLink("Invite People", "Auto_Gen", new { id = @Model.id })</li>
                <li>@Html.ActionLink("List of Participants", "ListofParticipants", new { id = @Model.id })</li>
                <li>@Html.ActionLink("List of Invited Speakers", "InvitedSpeaker", new { id = @Model.id })</li>
            </div>
        </aside><br>
        <aside>
            <div>
                <h4>Manage Sessions</h4>
                <li>@Html.ActionLink("Add/Remove Sessions", "Sessions", new { id = @Model.id })</li>
                <li>@Html.ActionLink("Workshop", "Workshop", new { id = @Model.id })</li>
                <li>@Html.ActionLink("Tutorials", "Tutorials", new { id = @Model.id })</li>
                <li>@Html.ActionLink("Extra Events", "Extra_Events", new { id = @Model.id })</li>
                <li>@Html.ActionLink("PHD Symposium", "PHD_Symposium", new { id = @Model.id })</li>
            </div>
        </aside><br>
        <aside>
            <div>
                <h4>Manage Papers</h4>
                <li>@Html.ActionLink("Change Submission link", "")</li>
                <li>@Html.ActionLink("Update List of Accepted Papers", "")</li>
            </div>
        </aside>
        <div id="leftDashBoard">

            <img id="image" src="~/Pics/DBPic1.jpg">

            <a href=@Url.Action("Auto_Gen","DashBoard")>
            <img id="image" src="~/Pics/DBPic2.jpg" alt="Auto Generated Emails">
                </a>

            <a href=@Url.Action("InvitedSpeaker", "DashBoard", new { id=@Model.id})>
                <img id="image" src="~/Pics/DBPic3.jpg" alt="Invited Speaker" />
            </a>

            <a href=@Url.Action("PHD_Symposium", "DashBoard", new { id = @Model.id })>
                <img id="image" src="~/Pics/DBPic4.jpg" alt="PHD Symposium">
            </a><br />

            <a href=@Url.Action("","DashBoard")>
                <img id="image" src="~/Pics/DBPic5.jpg" alt="Accepted Papers">
            </a>

            <a href=@Url.Action("Extra_Event","DashBoard",new{id=@Model.id})>
                <img id="image" src="~/Pics/DBPic6.jpg" alt="Extra Event">
            </a>

            <a href=@Url.Action("Workshop","DashBoard",new{id=@Model.id})>
                <img id="image" src="~/Pics/DBPic7.png" alt="Workshop">
            </a>

            <a href=@Url.Action("Tutorials","DashBoard",new {id=@Model.id})>
                <img id="image" src="~/Pics/DBPic8.png" alt="Tutorials">
             </a>   <br>

        </div>
    </section>
</body>
</html>


