@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.controller = "dashboard";
    ViewBag.action = "my_events";  
}


@{Html.RenderPartial("~/Views/Shared/partialDashBoard-j.cshtml");}

<div class="col-sm-10 blog-content">

    <div class="col-sm-10 text-left">

        <h1 class="text-center">Add Extra Event</h1>

        @using (Html.BeginForm("Add_Extra_Event", "DashBoard", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="control-label col-md-4">Title</label>
                <div class="col-md-4">
                    <input type="text" name="title" class="form-control">

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4">Description</label>
                <div class="col-md-4">
                    <input type="text" name="dis" class="form-control">

                </div>
            </div>


            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="Submit">
            </div>
        }


    </div>

</div>
</div>
</div>
</div>

