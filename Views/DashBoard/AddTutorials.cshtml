<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Conference Management System</title>
    <link href="~/Bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/bootstrap.min.js" type="application/javascript" rel="script"></script>
    <link href="~/CSS/Main.css" rel="stylesheet" type="text/css">
    <link href="nav%20bar.css" rel="stylesheet" type="text/css">

</head>

<body>


    <header class="header">
        <h1 style="padding-left:50px; text-align: center">Conference Mangement System</h1>
        <img id="cms-logo" src="~/Pics/cms logo.png">
    </header>


    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-default">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Home", "Home")</li>
                    <li>@Html.ActionLink("SearchforConferences", "Searching")</li>
                    <li>@Html.ActionLink("Create-an-event", "organize")</li>
                    <li>@Html.ActionLink("My-Events", "Events")</li>
                    <li>@Html.ActionLink("Contact-Us", "Contact")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>


            </div>
        </div>
    </nav>


    <center style="margin-top:-22px;"><h1 style="background-color: #9d9d9d; padding:10px;">Add Tutorials </h1></center>


    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-2 sidenav">

                <h4><b>Manage Basics</b></h4>
                <li>@Html.ActionLink("Change name of conference", "Edit_Name", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Change Venue", "Edit_Venue", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Change date", "Edit_Date", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Update Agenda", "Edit_Agenda", new { id = @Model.j })</li>
                <br>
                <hr>

                <h4 style="padding-top: -20px"><b>Manage Guests</b></h4>

                <li>@Html.ActionLink("Invite People", "AutoGen", new { id = @Model.j })</li>
                <li>@Html.ActionLink("List of Participants", "ListofParticipant", new { id = @Model.j })</li>
                <li>@Html.ActionLink("List of Invited Speakers", "InvitedSpeaker", new { id = @Model.j })</li>
                <br>
                <hr>
                <h4><b>Manage Sessions</b></h4>
                <li>@Html.ActionLink("Add/Remove Sessions", "Sessions", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Workshop", "Workshop", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Tutorials", "Tutorials", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Extra Events", "Extra_Events", new { id = @Model.j })</li>
                <li>@Html.ActionLink("PHD Symposium", "PHD_Symposium", new { id = @Model.j })</li>
                <br>
                <hr>

                <h4><b>Manage Papers</b></h4>
                <li>@Html.ActionLink("Change Submission link", "SubmissionLink", new { id = @Model.j })</li>
                <li>@Html.ActionLink("Update List of Accepted Papers", "AcceptedPapers", new { id = @Model.j })</li>

            </div>

            <div class="col-sm-10 text-left">


                <form class="form-horizontal">

                   @using (Html.BeginForm("AddTutorials", "DashBoard", null, FormMethod.Post, new { @class = "form-horizontal" }))
                   {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            <label class="control-label col-md-4">Title</label>
                            <div class="form-group input-group col-md-4">
                                <input type="text" name="title" class="form-control">

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4">Description</label>
                            <div class="form-group input-group col-md-4">
                                <input type="text" name="dis" class="form-control">

                            </div>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Submit">
                        </div>

                    }

                </form>



            </div>


        </div>

    </div>



</body>
</html>

