        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.city)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.city)
            @Html.ValidationMessageFor(model => model.city)
        </div>

       

        <div class="editor-label">
            @Html.LabelFor(model => model.agenda)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.agenda)
            @Html.ValidationMessageFor(model => model.agenda)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.submission_link)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.submission_link)
            @Html.ValidationMessageFor(model => model.submission_link)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.discipline)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.discipline)
