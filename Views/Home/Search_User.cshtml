@model CMS.Models.Search_User_Model
@{
    ViewBag.Title = "Conference Management System";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.action = "search_user";
}




  <h1 class="text-center">Search for Users</h1>

    @using (Html.BeginForm("Search_User", "Home", null, FormMethod.Post, new { @class = "search_form" }))
    {

        <div class="row">
          
            @{Html.RenderPartial("~/Views/Shared/Search.cshtml");}




            </div>
            }






            <h1 class="text-center">Popular Users</h1>

        <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">

            <div class="container bootstrap snippet">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="main-box no-header clearfix">
                            <div class="main-box-body clearfix">
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped table-bordered table-responsive" >

                                        <thead>
                                            <tr>
                                                <th><span>User</span></th>
                                                <th><span>Email</span></th>
                                                <th><span>Research Area</span></th>

                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var con in Model.user)
                                    {
                                                <tr>
                                                    <td>
                                                        @Html.ActionLink(con.name, "UserProfile", new { user_id = con.id })
                                                    </td>

                                                    <td>
                                                        @Html.ActionLink(con.email, "UserProfile", new { user_id = con.id })
                                                    </td>

                                                    <td>
                                                        @try
                                                        {
                                                            @Html.ActionLink(con.research_area, "UserProfile", new { user_id = con.id })
                                                        }
                                                        catch(Exception e)
                                                        {
                                                            
                                                        }
                                                    </td>


                                                </tr>
                                    }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>





