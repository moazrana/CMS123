@model CMS.Models.HomeViewModel
@{
    ViewBag.Title = "Conference Management System";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.action = "search";

}


<h1 class="text-center">Search for Event</h1>

@using (Html.BeginForm("Search", "Home", null, FormMethod.Post, new { @class="search_form"}))
{

    <div class="row">


        
        @{Html.RenderPartial("~/Views/Shared/Search.cshtml");}

        <div class="text-center">
            <a href="#." id="advance">Advanced Search</a>
        </div>

        <div class="col-sm-12 display-none" id="hidden">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="form-group">
                        <label for="sdate">Start Date</label>
                        <input type="text" name="sdate" id="sdate" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="form-group">
                        <label for="edate">End Date</label>
                        <input type="text" name="edate" id="edate" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="form-group">
                        <label for="country">Country</label>
                        <select class="form-control" name="country">
                            <option>Please choose an option</option>
                            <option>United States of America</option>
                            <option>Pakistan</option>
                            <option>New Zealand</option>
                            <option>South Africa</option>
                            <option>India</option>
                            <option>Canada</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="form-group">
                        <label for="city">City</label>
                        <input type="text" name="city" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="form-group">
                        <label for="dis">Discipline</label>
                        <select class="form-control" name="dis">
                            <option class="disabled">Please choose an option</option>
                            <option>Electical Engineering</option>
                            <option>Computer Science</option>
                        </select>
                    </div>
                </div>
            </div>
            
        </div>
    </div>




    <h1 class="text-center">Upcoming Conferences</h1>
    <table class="table table-hover table-striped table-bordered table-responsive" align="center">
        <tr>
            <th>Conference Name</th>
            <th>Country</th>
            <th>City</th>
        </tr>
        @foreach (var con in Model.conferences)
        {
            <tr>
                <td>@Html.ActionLink(con.name, "ConferenceDetails", new { id = con.id })</td>
                <td>@Html.ActionLink(con.country, "Search", new { country = con.country, city = "" })</td>
                <td>@Html.ActionLink(con.city, "Search", new { country = "", city = con.city })</td>
            </tr>
        }
    </table>



}







